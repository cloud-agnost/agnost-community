{
    "server": {
        "host": "localhost",
        "port": 4000,
        "timeout": 3600000,
        "maxBodySize": "50mb"
    },
    "rateLimiters": [
        {
            "rateLimitWindowSec": 30,
            "rateLimitMaxHits": 300
        }
    ],
    "database": {
        "maxPoolSize": 3,
        "mailMaxLength": 320,
        "jsonMaxLength": 4000,
        "linkMaxLength": 2048,
        "phoneMaxLength": 16,
        "encryptedTextFieldSQLMaxLength": 64,
        "monetaryDecimalDigits": 4,
        "enumMaxLength": 2048,
        "timeout": 60000
    },
    "cache": {
        "port": 6379
    },
    "queue": {
        "port": 5672,
        "reconnectInterval": 1000,
        "retryCount": 30
    },
    "sync": {
        "serverURL": "http://platform-sync-clusterip-service:4000",
        "namespace": "",
        "reconnection": true,
        "reconnectionDelay": 500,
        "path": "/sync/"
    },
    "general": {
        "generalQueueCount": 1,
        "maxMessageWaitMinues": 5,
        "maxMongoDBIndexNumberPerCollection": 64,
        "ingressServiceName": "ingress-service",
        "platformBaseUrl": "http://platform-core-clusterip-service:4000",
        "maxPoolSize": 3,
        "defaultClusterIPPort": 4000,
        "defaultKnativeIngressPort": 80,
        "livenessProbe": {
            "timeoutSeconds": 10,
            "periodSeconds": 30,
            "initialDelaySeconds": 30
        },
        "readinessProbe": {
            "timeoutSeconds": 10,
            "periodSeconds": 30,
            "initialDelaySeconds": 30
        },
        "startupProbe": {
            "timeoutSeconds": 10,
            "periodSeconds": 30,
            "failureThreshold": 30
        }
    }
}
